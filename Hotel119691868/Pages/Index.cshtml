@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="index-carousel" class="carousel slide" data-ride="carousel" data-interval="3000">
    <ol class="carousel-indicators">
        <li data-target="#index-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#index-carousel" data-slide-to="1"></li>
        <li data-target="#index-carousel" data-slide-to="2"></li>
        <li data-target="#index-carousel" data-slide-to="3"></li>
    </ol>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/reception.jpg" alt="Reception" />
            <div class="carousel-caption d-none d-md-block">
                <h5>American Scientist</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/room.jpg" alt="Room" />
            <div class="carousel-caption d-none d-md-block">
                <h5>New Scientist</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/dining.jpg" alt="Dining" />
            <div class="carousel-caption d-none d-md-block">
                <h5>Reader's Digest</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/pool.jpg" alt="Pool" />
            <div class="carousel-caption d-none d-md-block">
                <h5>National Geographic</h5>
            </div>
        </div>
    </div>

    <a class="carousel-control-prev" href="#index-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#index-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="text-center">
                <h1>Welcome to the Goma Hotel</h1>
            </div>
        </div>
        <div class="col-md-4">
            <ul>
                <li><a href="http://www.bom.gov.au/nsw/forecasts/coffsharbour.shtml" target="_blank">Coffs Harbour Weather</a></li>
                <li><a href="https://www.coffsharbour.nsw.gov.au/Home" target="_blank">Coffs Harbour Council</a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <p>We are based in Grafton, Coffs Harbour NSW. </p>
        </div>
    </div>
</div>