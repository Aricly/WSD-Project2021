@page
@model Hotel119691868.Pages.Bookings.SearchRoomModel
@{
}

<h2>Search Rooms</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Myself.TheRoom.BedCount" class="control-label"></label>
                <select asp-for="Myself.TheRoom.BedCount" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
                <span asp-validation-for="Myself.TheRoom.BedCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Myself.CheckIn" class="control-label"></label>
                <input type="date" asp-for="Myself.CheckIn" class="form-control">
                <span asp-validation-for="Myself.CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Myself.CheckOut" class="control-label"></label>
                <input type="date" asp-for="Myself.CheckOut" class="form-control">
                <span asp-validation-for="Myself.CheckOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (ViewData["Submitted"].ToString() == "True") {
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].BedCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Room)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BedCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
        </tr>
        }
    </tbody>
</table>
}